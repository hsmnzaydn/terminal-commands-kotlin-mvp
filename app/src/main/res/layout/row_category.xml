<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <android.support.v7.widget.AppCompatImageView android:layout_width="40dp" android:layout_height="40dp"
                                                  android:id="@+id/row_category_thumbnail_image_view"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  android:layout_marginTop="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/row_category_title_text_view" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/row_category_thumbnail_image_view"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/row_category_thumbnail_image_view"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintHorizontal_bias="0.034" app:layout_constraintVertical_bias="0.38"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/black"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/row_category_thumbnail_image_view"/>
</android.support.constraint.ConstraintLayout>